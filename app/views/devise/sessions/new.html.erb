<div class="container mx-auto flex flex-row justify-center items-center py-10">
  <!-- 画像セクション（大画面でのみ表示） -->
  <div class="images-section pt-3 hidden lg:block"></div>

  <!-- ログインセクション -->
  <div class="login-section pt-3">
    <!-- ログインカード -->
    <div class="text-center bg-white shadow-lg rounded-lg pt-5 mx-auto w-96">
      <h1 class="text-2xl font-bold mb-6">ログイン画面</h1>
      <div class="px-6 pb-6">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <!-- Eメール入力フィールド -->
          <div class="mb-4 mt-4">
            <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Eメール" %>
          </div>

          <!-- パスワード入力フィールド -->
          <div class="mb-4">
            <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "パスワード" %>
          </div>

          <!-- ログインボタン -->
          <%= f.submit "ログイン", class: "w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition duration-300" %>
        <% end %>

        <!-- 通知メッセージ -->
        <% if notice %>
          <p class="text-green-500 mt-4"><%= notice %></p>
        <% elsif alert %>
          <p class="text-red-500 mt-4"><%= alert %></p>
        <% end %>

        <!-- パスワードを忘れたリンク -->
        <a href="#" class="text-blue-500 hover:underline block mt-4 text-sm">
          パスワードを忘れた方
        </a>
      </div>
    </div>

    <!-- サインアップカード -->
    <div class="text-center bg-white shadow-lg rounded-lg py-4 mt-6 w-96">
      <p class="text-gray-600">
        アカウントをお持ちでない方
        <%= link_to "新規登録", new_user_registration_path, class: "text-blue-500 hover:underline font-medium" %>
      </p>
    </div>
  </div>
</div>