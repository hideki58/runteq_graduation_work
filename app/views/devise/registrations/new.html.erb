<div class="container mx-auto flex flex-row justify-center items-center">
  <div class="login-section pt-3">
    <div class="card text-center pt-5 mx-auto bg-white shadow-md rounded-lg" style="width: 23rem;">
      <h1 class="text-2xl font-bold">サインアップ画面</h1>

      <div class="card-body p-6">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="mb-4 mt-4">
            <%= f.email_field :email, class: "form-input w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "電話番号、Eメール" %>
          </div>

          <div class="mb-4 mt-4">
            <%= f.text_field :username, class: "form-input w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "ユーザ名" %>
          </div>

          <div class="mb-4">
            <%= f.password_field :password, class: "form-input w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "パスワード" %>
          </div>

          <div class="mb-4">
            <%= f.password_field :password_confirmation, class: "form-input w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "パスワード確認" %>
          </div>

          <%= f.submit "サインアップ", class: "w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition duration-300" %>
        <% end %>

        <% if notice %>
          <p class="text-green-500 mt-4"><%= notice %></p>
        <% elsif alert %>
          <p class="text-red-500 mt-4"><%= alert %></p>
        <% end %>
      </div>
    </div>

    <div class="text-center py-2 mt-3 mx-auto bg-white shadow-md rounded-lg" style="width: 23rem;">
      <div class="card-text text-gray-600">
        既にアカウントを持っている？
        <%= link_to "ログイン", new_user_session_path, class: "text-blue-500 hover:underline" %>
      </div>
    </div>
  </div>
</div>
